{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
      "prettier/prettier": ["error", {
        "printWidth": 100,
        "useTabs": false,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 2
      }]
    }
}
